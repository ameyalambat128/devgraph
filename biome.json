{
  "$schema": "https://biomejs.dev/schemas/biome.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "files": {
    "includes": [
      "**/*",
      "!**/node_modules",
      "!**/.devgraph",
      "!**/dist",
      "!**/coverage",
      "!**/.turbo",
      "!**/.next",
      "!**/out"
    ]
  }
}
