{
  "name": "devgraph",
  "version": "0.1.1",
  "type": "module",
  "description": "CLI that scans Markdown for devgraph-* blocks and builds a unified project graph",
  "bin": {
    "devgraph": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ameyalambat128/devgraph",
    "directory": "packages/devgraph-cli"
  },
  "homepage": "https://devgraph.ameyalambat.com",
  "author": "Ameya Lambat",
  "license": "MIT",
  "keywords": [
    "devgraph",
    "cli",
    "documentation",
    "monorepo",
    "architecture",
    "agents",
    "mermaid"
  ],
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc -p tsconfig.json",
    "build:with-studio": "tsc -p tsconfig.json && pnpm copy-studio",
    "copy-studio": "node -e \"const fs=require('fs');const src='../../apps/studio/out';const dest='./dist/studio-web';if(fs.existsSync(src)){fs.cpSync(src,dest,{recursive:true});console.log('Copied studio assets to dist/studio-web')}else{console.log('Studio assets not found, skipping')}\"",
    "devgraph": "tsx src/index.ts",
    "lint": "pnpm --workspace-root exec eslint \"packages/devgraph-cli/src/**/*.{ts,tsx}\"",
    "test": "echo 'no tests yet'",
    "prepublishOnly": "pnpm build:with-studio"
  },
  "dependencies": {
    "@devgraph/core": "^0.1.0",
    "@mermaid-js/mermaid-cli": "11.4.0",
    "commander": "12.1.0"
  },
  "devDependencies": {
    "@types/node": "22.9.4",
    "typescript": "5.6.3"
  }
}
